<Window x:Class="menza_admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menza Admin" Height="300" Width="400"
        Loaded="Window_Loaded">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="StatusLabel" Content="Kapcsolat ellenőrzése..." Grid.Row="0" Margin="0,0,0,10"/>
        <ListBox x:Name="MenuList"
                 DisplayMemberPath="name"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch" Grid.Row="1"/>

        <Button x:Name="AddFoodButton"
                    Width="180"
                    Height="40"
                    Content="Új étel feltöltése"
                    Background="#3A8DFF"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddFoodButton_Click" Margin="100,0,100,188" Grid.Row="1"/>
    </Grid>
</Window>

