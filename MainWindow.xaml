<Window x:Class="menza_admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Global Navbar (always visible) -->
        <Border Grid.Row="0" Background="#3A8DFF" Height="50">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Button Content="Orders" Width="80" Margin="5" Click="NavigateOrders"/>
                <Button Content="Manage foods" Width="80" Margin="5" Click="NavigateFoods"/>
                <Button Content="Manage menus" Width="80" Margin="5" Click="NavigateMenus"/>
                <Button Content="Export" Width="80" Margin="5" Click="NavigateExport"/>
            </StackPanel>
        </Border>

        <!-- Frame for page navigation -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>